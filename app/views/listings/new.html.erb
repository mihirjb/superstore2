<% content_for :title,  "Create a new listing to sell in Singapore" %>

<section class="long-form-section">
	<div class="header silver-color offshadow">
		<h1 class="page-title auth-form-heading">List your phone</h1>
		<p class="sub">Free to sell, so you keep all the money</p>
</div>
<div class="container">	

				
					<%= form_for @listing, :id => "listing-form",  :role => "form", :html => {:class=>"long-form", :multipart => true } do |f| %>
					
					<p><%= f.label :devicename, " Name of your phone" %>
					<%= f.text_field :devicename %></p>
					<p><%= f.label :devicestorage, "Storage capacity" %>
					<%= f.text_field :devicestorage %></p>
					<p><%= f.label :devicecolor, " Device Color" %>
					<%= f.text_field :devicecolor %></p>
					

												<%= f.hidden_field :status, :value=>"Pending" %>

												<h3>Upload pictures.</h3>

							<p class="helper-block alert alert-danger">If you upload pictures now, then you'll not be allowed to add more pictures later. But if you don't then you can add pictures by editing the listing. So we say upload them later by editing the same listing.</p>
													<div class="newPaperclipFiles">

													        <%= f.fields_for :assets do |asset| %>

													           <% if asset.object.new_record? %>
													                 <p><%= asset.file_field :image, :class=> "" %></p>
													           <% end %>

													       <% end %>

									
								 <h4>I accept all the terms and conditions and hereby when I click the Go button.</h4>
					</div>
								<input type="text" name="foo" style="display: none;">


											<hr class="gray">
												<%= f.submit "Go", :disable_with => 'Going...', :class =>"btn btn-success redround offshadow" %>
											<% end %>
	
				
									
	</div>
</section>

	




